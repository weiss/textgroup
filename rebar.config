{minimum_otp_vsn, "22.0"}.

{deps, [recon]}.   % Just for debugging purposes: https://ferd.github.io/recon/

{relx,
 [{release, {textgroup, "0.1.0"},
   [textgroup,
    sasl,          % Only required for release upgrades.
    runtime_tools, % Required by OTP tracing tools such as Observer.
    recon]},
  {mode, dev},
  {sys_config, "config/sys.config"},
  {vm_args, "config/vm.args"},
  {extended_start_script_hooks,
   [{post_start,   % Don't let `textgroup daemon` daemonize too early:
     [{wait_for_process, textgroup_acceptor_sup}]}]}]}.

{profiles,
 [{prod,
   [{relx,
     [{mode, prod}]}]},
  {test,
   [{erl_opts,
     [nowarn_export_all]}]}]}.

{erl_opts,
 [warn_export_vars,
  warn_missing_spec_all,
  warn_unused_import,
  warnings_as_errors,
  debug_info]}.

{xref_checks,
 [undefined_function_calls,
  undefined_functions,
  deprecated_function_calls,
  deprecated_functions,
  locals_not_used]}.

{dialyzer,
 [{warnings,
   [unknown,
    unmatched_returns,
    error_handling,
    race_conditions]}]}.

{ct_opts,
 [{keep_logs, 10},
  {config,
   ["test/textgroup_SUITE.config"]}]}.

{cover_enabled, true}.

{cover_excl_mods,
 [textgroup_systemd]}.

{cover_opts,
 [verbose,
  {min_coverage, 70}]}.

{edoc_opts,
 [{preprocess, true}]}.

{alias,
 [{check,
   [xref,
    dialyzer,
    ct,
    cover]}]}.
