{minimum_otp_vsn, "22.0"}.

{deps, [recon]}. % Just for debugging purposes.

{relx,
 [{release, {textgroup, "0.1.0"},
   [textgroup,
    sasl,
    runtime_tools,
    recon]},
  {mode, dev},
  {sys_config, "config/sys.config"},
  {vm_args, "config/vm.args"},
  {extended_start_script_hooks,
   [{post_start,
     [{wait_for_process, textgroup_acceptor_sup}]}]}]}.

{profiles,
 [{prod,
   [{relx,
     [{mode, prod}]}]}]}.

{erl_opts,
 [warn_export_vars,
  warn_missing_spec_all,
  warn_unused_import,
  warnings_as_errors,
  debug_info]}.

{xref_checks,
 [undefined_function_calls,
  undefined_functions,
  deprecated_function_calls,
  deprecated_functions,
  locals_not_used]}.

{dialyzer,
 [{warnings,
   [unknown,
    unmatched_returns,
    error_handling,
    race_conditions]}]}.
